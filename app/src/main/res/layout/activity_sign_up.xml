<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.signup.SignUpActivity">
    <data>
        <variable
            name="viewModel"
            type="fr.polytech.bike.ui.signup.SignUpViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="40dip"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/tv_signup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dip"
            android:text="Inscription"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_signup_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:ems="10"
            android:hint="Nom"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="@={viewModel.lastname}" />

        <EditText
            android:id="@+id/et_signup_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:ems="10"
            android:hint="Prenom"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="@={viewModel.firstname}" />

        <EditText
            android:id="@+id/et_signup_taille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:ems="10"
            android:hint="Taille (cm)"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:text="@={viewModel.taille}" />

        <EditText
            android:id="@+id/et_signup_poids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:ems="10"
            android:hint="Poids (kg)"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:text="@={viewModel.poids}" />

        <EditText
            android:id="@+id/et_signup_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:ems="10"
            android:hint="Date de naissance"
            android:inputType="date"
            android:minHeight="48dp"
            android:text="@={viewModel.birthdate}" />

        <EditText
            android:id="@+id/tv_signup_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:ems="10"
            android:hint="Nom d'utilisateur"
            android:inputType="text"
            android:minHeight="48dp"
            android:text="@={viewModel.username}" />

        <EditText
            android:id="@+id/et_signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:ems="10"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:text="@={viewModel.password}" />

        <EditText
            android:id="@+id/et_signup_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:ems="10"
            android:hint="Confirmation mot de passe"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:text="@={viewModel.confirmPassword}" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_signup_valid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider" />
    </LinearLayout>
</layout>
